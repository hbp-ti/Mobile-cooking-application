<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/darkgradient"
    tools:context=".click_recipe_details">

    <ImageButton
        android:id="@+id/goBackArrowRecipeDetails"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="21dp"
        android:background="@android:color/transparent"

        android:importantForAccessibility="no"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_arrow_back_24" />

    <ImageView
        android:id="@+id/recipePhotoImageView"
        android:layout_width="219dp"
        android:layout_height="245dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/photo_placeholder"
        app:layout_constraintEnd_toStartOf="@+id/ingredientListTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goBackArrowRecipeDetails" />

    <TextView
        android:id="@+id/ingredientListTextView"
        android:layout_width="193dp"
        android:layout_height="190dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/inter"
        android:padding="8dp"
        android:text="-eggs                        -flour                         -sugar                          -etc"
        android:textColor="@color/black"
        android:textColorLink="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/recipePhotoImageView"
        app:layout_constraintTop_toBottomOf="@+id/ingredientTextView" />

    <TextView
        android:id="@+id/instructionsTextView"
        android:layout_width="224dp"
        android:layout_height="283dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/inter"
        android:padding="8dp"
        android:text="-beat the eggs                       -add sugar                       -add and mix the flour                       -etc.."
        android:textColor="@color/black"
        android:textColorLink="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instructionTextView" />

    <TextView
        android:id="@+id/RecipeName"
        android:layout_width="216dp"
        android:layout_height="45dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="6dp"
        android:fontFamily="@font/inter_bold"
        android:text="Oreo Cake"
        android:textColor="@color/black"
        android:textColorLink="#000000"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/recipePhotoImageView"
        app:layout_constraintStart_toEndOf="@+id/goBackArrowRecipeDetails"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/recipePhotoImageView"
        app:layout_constraintEnd_toEndOf="@+id/recipePhotoImageView"
        app:srcCompat="@drawable/favourite_icon" />

    <TextView
        android:id="@+id/SmallRecipeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-150dp"
        android:fontFamily="@font/inter"
        android:text="Oreo Cake"
        android:textColorLink="#000000"
        app:layout_constraintBottom_toTopOf="@+id/RecipeTime"
        app:layout_constraintStart_toEndOf="@+id/recipePhotoImageView" />

    <TextView
        android:id="@+id/RecipeTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/inter"
        android:text="40m"
        android:textColorLink="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/recipePhotoImageView"
        app:layout_constraintEnd_toStartOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/recipePhotoImageView"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:srcCompat="@drawable/clock_icon" />

    <TextView
        android:id="@+id/instructionTextView"
        android:layout_width="218dp"
        android:layout_height="28dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/inter"
        android:text="Instructions:"
        android:textColor="@color/black"
        android:textColorLink="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/instructionsTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recipePhotoImageView" />

    <TextView
        android:id="@+id/ingredientTextView"
        android:layout_width="185dp"
        android:layout_height="21dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="4dp"
        android:fontFamily="@font/inter"
        android:text="Ingredients:"
        android:textColor="@color/black"
        android:textColorLink="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/recipePhotoImageView"
        app:layout_constraintTop_toBottomOf="@+id/RecipeName" />

</androidx.constraintlayout.widget.ConstraintLayout>