<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/darkgradient"
    tools:context=".Profile">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:text="Profile"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0498" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:background="@color/profileGrey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="147dp"
            android:background="@drawable/half_circle_profile"
            app:layout_constraintBottom_toTopOf="@+id/view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageProfile"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginBottom="72dp"
            android:elevation="8dp"
            android:src="@mipmap/profile_image_foreground"
            app:layout_constraintBottom_toTopOf="@+id/view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.755" />

        <TextView
            android:id="@+id/nameUser"
            android:layout_width="374dp"
            android:layout_height="37dp"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:text="Hugo Pereira"
            android:textColor="@color/nameColor"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.513"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageProfile"
            app:layout_constraintVertical_bias="0.142" />

        <TextView
            android:id="@+id/username"
            android:layout_width="374dp"
            android:layout_height="33dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="hugopereir_23"
            android:textColor="@color/usernameColor"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameUser" />

        <Button
            android:id="@+id/buttonMyRecipes"
            android:layout_width="292dp"
            android:layout_height="81dp"
            android:layout_marginBottom="32dp"
            android:backgroundTint="@color/darkOrange"
            android:drawableLeft="@mipmap/recipe_book_icon_foreground"
            android:elevation="8dp"
            android:fontFamily="@font/inter"
            android:gravity="start|center_vertical|center"
            android:text="My Recipes"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:cornerRadius="15dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonSettings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent" />


        <Button
            android:id="@+id/buttonSettings"
            android:layout_width="292dp"
            android:layout_height="81dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="@color/darkOrange"
            android:elevation="8dp"
            android:text="Settings"
            android:textSize="20dp"
            android:drawableLeft="@mipmap/settings_icon_foreground"
            android:gravity="start|center_vertical"
            android:fontFamily="@font/inter"
            android:textColor="@color/black"
            app:cornerRadius="15dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonLogOut"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/buttonLogOut"
            android:layout_width="292dp"
            android:layout_height="81dp"
            android:layout_marginBottom="40dp"
            android:backgroundTint="@color/redLogOut"
            android:elevation="8dp"
            android:fontFamily="@font/inter"
            android:drawableLeft="@mipmap/logout_icon_foreground"
            android:gravity="start|center_vertical"
            android:text="Log Out"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:cornerRadius="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>